<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Ced_ReferralSystem::css/refferal.css"/>
        <css src="Ced_ReferralSystem::css/font-awsome.css"/>
        <css src="Ced_ReferralSystem::css/font-awesome.min.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title" remove="true" />
    	<referenceContainer name="content" >
             <block class="Ced\ReferralSystem\Block\Referral\Invite" name="invite_users"
                    template="invites/index.phtml" cacheable="false" />
        </referenceContainer>
    </body>
</page>
<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Convert_CustomerContent::css/style.css" />
    </head>
    <body>
        <referenceContainer name="sidebar.main">
            <referenceBlock name="customer_account_navigation">
                <block class="Magento\Customer\Block\Account\SortLinkInterface" name="media-branding">
                    <arguments>
                            <argument name="label" xsi:type="string" translate="true"><![CDATA[Media & Branding]]></argument>
                        <argument name="path" xsi:type="string">ccc/branding/index</argument>
                        <argument name="sortOrder" xsi:type="number">110</argument>
                    </arguments>
                </block>
                <block class="Magento\Customer\Block\Account\SortLinkInterface" name="training-video-content">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true"><![CDATA[Training & Video Content]]></argument>
                        <argument name="path" xsi:type="string">ccc/training/index</argument>
                        <argument name="sortOrder" xsi:type="number">110</argument>
                    </arguments>
                </block>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
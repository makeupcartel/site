                        message2 += 'you added ';
                        message2 += $pro_num;
                        message2 += ' item(s) to your shopping cart';

                        message = '';
                        message += '<div class="message-success success message">';
                        message += '<p style="margin-bottom:0px">';
                        message += 'You added ';
                        message += $pro_num;
                        message += ' item(s)';
                        message += 'to your ';
                        message += '<a href="';
                        message += urlShoppingCart;
                        message += '">';
                        message += 'shopping cart.';
                        message += '</a>';
                        message += '</p>';
                        message += '</div>';
                        $('.message-addtocart').html(message);
                        loadminicart();
            }
        });
    });
}

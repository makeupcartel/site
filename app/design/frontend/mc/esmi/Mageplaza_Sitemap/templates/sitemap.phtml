<div id="mageplaza-seo-html-sitemap">
    <?= $block->renderHtmlSiteMap() ?>
</div>

<script type="text/javascript">
    require([
        'jquery'
    ], function ($) {
        $(document).ready(function () {
        	var items = $("div#mageplaza-seo-html-sitemap ul.mp-sitemap-listing li a");
        	items.each(function () {
                if($(this).text() == "Home page"){
                    var oldUrl = $(this).attr("href");
                    var newUrl = oldUrl.replace("home/", "");
                    $(this).attr("href", newUrl);
                }
            });
        });
    });

</script>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="refer">
                <arguments>
                    <argument name="path" xsi:type="string">referralsystem/referral</argument>
                    <argument name="label" xsi:type="string" translate="true">Refer A Friend</argument>
                    <argument name="sortOrder" xsi:type="number">38</argument>
